<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.lukesturgeon.hmcro"
        versionCode = "1.0.14"
        version     = "1.0.14">

  <name>HMCRO</name>

  <description>
    An audio/gps guided experience created for the Citizen Rotation Office project. http://hmcro.org
  </description>

  <author href="http://lukesturgeon.co.uk" email="hello@lukesturgeon.co.uk">
    Luke Sturgeon
  </author>

  <content src="index.html"/>

  <preference name="orientation" value="portrait" />

  <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0"/>
  <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1"/>
  <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0"/>
  <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2"/>
  <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0"/>
  <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1"/>
  <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.2"/>
  <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1"/>

  <icon src="icon.png"/>

  <platform name="android">
    <icon src="www/res/icon/icon-36.png" qualifier="ldpi" />
		<icon src="www/res/icon/icon-48.png" qualifier="mdpi" />
		<icon src="www/res/icon/icon-72.png" qualifier="hdpi" />
		<icon src="www/res/icon/icon-96.png" qualifier="xhdpi" />
		<icon src="www/res/icon/icon-144.png" qualifier="xxhdpi" />
		<icon src="www/res/icon/icon-192.png" qualifier="xxxhdpi" />

    <splash src="www/res/screen/android/drawable-land-ldpi-screen.png" qualifier="land-ldpi"/>
    <splash src="www/res/screen/android/drawable-land-mdpi-screen.png" qualifier="land-mdpi"/>
    <splash src="www/res/screen/android/drawable-land-hdpi-screen.png" qualifier="land-hdpi"/>
    <splash src="www/res/screen/android/drawable-land-xhdpi-screen.png" qualifier="land-xhdpi"/>
    <splash src="www/res/screen/android/drawable-land-xxhdpi-screen.png" qualifier="land-xxhdpi"/>
    <splash src="www/res/screen/android/drawable-land-xxxhdpi-screen.png" qualifier="land-xxxhdpi"/>
    <splash src="www/res/screen/android/drawable-port-ldpi-screen.png" qualifier="port-ldpi"/>
    <splash src="www/res/screen/android/drawable-port-mdpi-screen.png" qualifier="port-mdpi"/>
    <splash src="www/res/screen/android/drawable-port-hdpi-screen.png" qualifier="port-hdpi"/>
    <splash src="www/res/screen/android/drawable-port-xhdpi-screen.png" qualifier="port-xhdpi"/>
    <splash src="www/res/screen/android/drawable-port-xxhdpi-screen.png" qualifier="port-xxhdpi"/>
    <splash src="www/res/screen/android/drawable-port-xxxhdpi-screen.png" qualifier="port-xxxhdpi"/>
  </platform>

  <!--  allow links using the whitelist plugin -->
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>

  <!-- load external content using the whitelist plugin -->
  <access origin="*"/>

</widget>
